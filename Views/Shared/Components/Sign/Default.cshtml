@model ConstructionApp.ViewModels.SignViewModel;
  
<ul class="navbar-nav align-items-center login-item">
    <li class="nav-item dropdown me-3">
        <a class="nav-link dropdown-toggle d-flex align-items-center float-end" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="@Url.Content(Model.userAvatar)" alt="User Avatar" class="rounded-circle me-2" width="32" height="32" />
            <span class="text-muted">@Model.userName</span>
        </a>
        <ul class="dropdown-menu dropdown-menu-end p-0" aria-labelledby="userDropdown" style="min-width: 100%;">
            <li>
                <form asp-controller="Home" asp-action="Logout" method="post" class="dropdown-item p-0">
                @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link w-100 text-start d-flex align-items-center px-3" style="text-decoration: none;">
                        <i class="bi bi-box-arrow-right me-2"></i>
                        Logout
                    </button>
                </form>
            </li>
        </ul>
    </li>
</ul> 