<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ConstructionApp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="//cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="//cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css"  />
    <link rel="stylesheet" href="https://code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css"/>
    <link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/alarm.css" asp-append-version="true" />
    <link href="//cdn.datatables.net/buttons/1.7.1/css/buttons.dataTables.min.css" />
</head>
<body>
    <div class="d-flex flex-grow-1">
        <!-- Sidebar -->
        <nav id="sidebarMenu" class="offcanvas offcanvas-start bg-light border-end d-md-block d-md-flex box-shadow" tabindex="-1">
            <div class="position-sticky">
                <a class="d-flex align-items-center p-3 mb-3 text-decoration-none border-bottom" asp-controller="Home" asp-action="Index">
                    <h3 class="text-white my-auto">Home</h3>
                </a>
                <div class="px-3">
                    @if (User.IsInRole("Admin") || User.IsInRole("Surveyor") || User.IsInRole("Manager"))
                    {
                        <h6 class="text-muted text-uppercase small">Overview</h6>
                        <ul class="nav flex-column mb-3">
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door me-2"></i>Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-controller="WorkSites" asp-action="Index">
                                    <i class="bi bi-speedometer2 me-2"></i>
                                    WorkSite
                                </a>
                            </li>
                        </ul>

                        <h6 class="text-muted text-uppercase small">Record</h6>
                        <ul class="nav flex-column mb-3"> 
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Presences" asp-action="Index"><i class="bi bi-receipt me-2"></i>Presence</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Purchases" asp-action="Index"><i class="bi bi-credit-card me-2"></i>Purchase</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Maintenances" asp-action="Index"><i class="bi bi-tools me-2"></i>Maintenance</a>
                            </li>
                        </ul>

                        <h6 class="text-muted text-uppercase small">Management</h6>
                        <ul class="nav flex-column mb-3">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Employees" asp-action="Index"><i class="bi bi-people me-2"></i>Employee</a>
                            </li>   
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Materials" asp-action="Index"><i class="bi bi-bricks me-2"></i>Material</a>
                            </li>
                            @if (!User.IsInRole("Manager"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Vehicles" asp-action="Index"><i class="bi bi-truck me-2"></i>Vehicle</a>
                                </li>
                            } 
                        </ul>
                    }
                </div>
            </div>
        </nav>

        <!-- Main content area -->
        <div class="flex-grow-1 d-flex flex-column main-content" style="position:relative">
            <!-- Top navbar -->
            <header>
                <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow shadow-sm py-2">
                    <div class="container-fluid">
                        <button class="btn btn-outline-secondary d-md-none me-3" type="button" 
                        data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu" 
                        aria-controls="sidebarMenu" aria-label="Toggle sidebar">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                       
                        <!-- Right-aligned nav items -->
                    <div class="d-flex align-items-center justify-content-between flex-grow-1">
                        @await Html.PartialAsync("_WorkSiteDropDown")
                        <div class="d-flex">
                            @await Component.InvokeAsync("Alarm")
                            @await Component.InvokeAsync("Sign")
                        </div>
                    </div>
                </div>
            </nav>
            </header>

            <!-- Main -->
            <main class="flex-grow-1 overflow-auto bg-white">
                @RenderBody()
            </main>
            @await Component.InvokeAsync("Footer")
        </div>
    </div> 

    <script src="~/lib/jquery/dist/jquery.min.js"></script> 
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="//cdn.datatables.net/buttons/1.7.1/js/dataTables.buttons.min.js"></script>
    <script src="https://code.jquery.com/ui/1.13.2/jquery-ui.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/crudmodal.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/alarm.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script> 
        window.myRole = @Html.Raw(Json.Serialize(ViewBag.MyRole));
    </script>
</body>
</html>
