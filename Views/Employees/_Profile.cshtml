@model ConstructionApp.ViewModels.RegisterViewModel
 
<input type="hidden" asp-for="Id" />

<div class="modal-header">
    <h5 class="modal-title">Profile</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <div class="row">
    <div class="col-md-6 p-3">
        <div class="row mb-3 align-items-center">
            <label class="col-sm-4 col-form-label">Manager:</label>
            <div class="col-sm-8">
                    @if (Model.WorkSites != null)
                    {
                        <p class="form-control-plaintext">
                            @Model.WorkSites.FirstOrDefault(w => w.Value == Model.WorkSiteId.ToString())?.Text
                        </p>
                    }
                    else
                    {
                        <p class="form-control-plaintext">NoWorkSite</p>
                    }
            </div>
        </div>
        <div class="row mb-3 align-items-center">
            <label class="col-sm-4 col-form-label">Role:</label>
            <div class="col-sm-8">
                <p class="form-control-plaintext">
                        @(
                                Model.Id_Role switch
                                {
                                    1 => "Admin",
                                    2 => "Geometra",
                                    3 => "Manager",
                                    4 => "Worker",
                                    5 => "Supplier",
                                    _ => "Unknown"
                                }
                            )
                </p>
            </div>
        </div>
        <div class="row mb-3 align-items-center">
            <label class="col-sm-4 col-form-label">Username:</label>
            <div class="col-sm-8">
                <p class="form-control-plaintext">@Model.UserName</p>
            </div>
        </div>
        <div class="row mb-3 align-items-center">
            <label class="col-sm-4 col-form-label">Name completo:</label>
            <div class="col-sm-8">
                <p class="form-control-plaintext">@Model.FullName</p>
            </div>
        </div>
    </div>
    <div class="col-md-6 p-3">
        <div class="d-flex align-items-center justify-content-center flex-column h-100 border border-primary rounded">
            <div id="dropZone" class="text-center p-2">
                <div id="previewContainer">
                    <img id="picturePreview" src="@(!string.IsNullOrEmpty(Model.AvatarUrl) ? Url.Content(Model.AvatarUrl) : "/images/avatar.svg")"
                        alt="Avatar Preview" style="max-width: 200px;" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-6 p-3">
        <div class="row mb-3 align-items-center">
            <label class="col-sm-4 col-form-label">Email:</label>
            <div class="col-sm-8">
                <p class="form-control-plaintext">@Model.Email</p>
            </div>
        </div>
    </div>
    <div class="col-md-6 p-3">
        <div class="row mb-3 align-items-center">
            <label class="col-sm-4 col-form-label">Address:</label>
            <div class="col-sm-8">
                <p class="form-control-plaintext">@Model.Address</p>
            </div>
        </div>
        <div class="row mb-3 align-items-center">
            <label class="col-sm-4 col-form-label">Telefono:</label>
            <div class="col-sm-8">
                <p class="form-control-plaintext">@Model.PhoneNumber</p>
            </div>
        </div>
    </div>
</div>

<hr />

<!-- File Upload Section (View-only) -->
<div class="mb-3 d-flex align-items-center">
    <label class="form-label me-3">Attach</label>
</div>

<div class="table-responsive">
    <table class="table table-bordered" id="filesTable">
        <thead class="table-light">
            <tr>
                <th>FileName</th>
                <th>Description</th>
                <th>Scadenza</th>
                <th>Rinnovato</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.AttachFiles.Count; i++)
            {
                var displayStyle = Model.AttachFiles[i].Dumped ? "display:none;" : "";
                <tr data-index="@i" style="@displayStyle">
                    <td>@Model.AttachFiles[i].FileName</td>
                    <td>@Model.AttachFiles[i].Description</td>
                    <td>@Model.AttachFiles[i].Deadline.ToString("dd/MM/yyy")</td>
                    <td class="text-center">
                        @(Model.AttachFiles[i].Renewed ? "✔️" : "❌")
                    </td>
                    <td>
                        <input asp-for="@Model.AttachFiles[i].StoredFilePath" type="hidden"/>
                        <button type="button" class="btn btn-info btn-sm view-file">
                            <i class="bi bi-eye"></i>
                        </button> 
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">OK</button>
</div> 

