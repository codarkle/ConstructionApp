@model ConstructionApp.ViewModels.PresenceEmployeeViewModel

<form id="editForm" asp-action="Edit" asp-controller="Presences" method="post">
    <input asp-for="EmployeeId" type="hidden" />
    <input asp-for="Id" type="hidden" />
    <input type="hidden" asp-for="IsPresent" />

    <div class="modal-header">
        <h5 class="modal-title">Update</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
    </div>

    <div class="modal-body">
        <div class="mb-3">
            <div class="form-control-plaintext fw-semibold">@Model.EmployeeName </div>
        </div>

        <div class="mb-3">
            <label asp-for="HS" class="form-label">Ore Sole</label>
            <input asp-for="HS" class="form-control" />
            <span asp-validation-for="HS" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="HR" class="form-label">Ore Pioggia</label>
            <input asp-for="HR" class="form-control" />
            <span asp-validation-for="HR" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Cost" class="form-label">Cost</label>
            <input asp-for="Cost" class="form-control" />
            <span asp-validation-for="Cost" class="text-danger"></span>
        </div>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    </div>
</form>
 